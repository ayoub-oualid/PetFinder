@page
@model PetFinder.Pages.Pets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pets</h1>

<p>
    <a asp-page="Create" type="button" class="btn btn-primary">New</a>
</p>
<table class="table">
    <thead>
        <tr scope="row" class="table-borderless">
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Race)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" type="button" class="btn btn-secondary">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
