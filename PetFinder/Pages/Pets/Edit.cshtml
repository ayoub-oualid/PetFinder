@page
@model PetFinder.Pages.Pets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pet.Id" />
            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.BirthDay" class="control-label"></label>
                <input asp-for="Pet.BirthDay" class="form-control" />
                <span asp-validation-for="Pet.BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Race" class="control-label"></label>
                <input asp-for="Pet.Race" class="form-control" />
                <span asp-validation-for="Pet.Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index"type="button" class="btn btn-outline-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
